extends ../layouts/default

block css
	link(rel="stylesheet", href="/styles/gallery.css")

block intro
	.container
		h1(style="text-align:center;margin-top:60px;") Gallery
	
block content
	.container
		h2(style="margin-top:20px;text-align:center;")= current
		.row
			each dir, i in dirs
				if(dir)
					.col-sm-12.col-md-4.col-lg-3
						a(href="http://95.85.57.110:8006/gallery/" + current + ":" + dir)
							div(style='background:url(http://95.85.57.110:8006/images/folder.svg);width:280px;height:150px;margin:auto;')
								img(src="http://95.85.57.110:8006/gallery/"+ dir + "/thumbnail.jpg", style="width:150px;height:80px;margin-top: 55px;margin-left:60px;")
							p(style="text-align:center;font-size:25px;")= dir
			each image, index in images
				if(image)
					.col-sm-12.col-md-4.col-lg-3
						img.hover-shadow(src="http://95.85.57.110:8006/gallery/"+image, style="width:280px;height:150px;border-radius:10px;margin-top:5px;margin-bottom:10px;margin-left:10px;margin-right:10px;padding:10px;border:1px solid rgb(156,0,186);", onclick="openModal();currentSlide("+(index+1)+")")
		#myModal.modal
			span.close.cursor(class="glyphicon glyphicon-remove", onclick="closeModal()", style="width:30px;height:30px;border-radius:50px;background-color: #fff;padding-left:3px;padding-top:3px;")
			.modal-content(style="background: transparent;")
				.caption-container
					//p#caption
				each image, index in images
					.mySlides(style="background: transparent;")
						.numbertext= (index+1) +"/"+ images.length
						img(src="http://95.85.57.110:8006/gallery/"+image)
				a.prev(onclick="plusSlides(-1)") ❮
				a.next(onclick="plusSlides(1)") ❯
				#img-nav.row
					each image, index in images
						.col-xs-12.col-sm-6.col-md-4.col-lg-3(style="width:150px;height:60px;margin:auto;background-color:rgba(0,0,0,.7);border:2px solid black;")
							img.demo(src="http://95.85.57.110:8006/gallery/"+image, style="width:100%;height:100%;", onclick="currentSlide("+(index+1)+")", alt=""+image)

block js
	script(src="/js/gallery.js")
