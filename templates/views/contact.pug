extends ../layouts/default

block intro
	.container
		h1(style="margin-top:80px;text-align:center;") Contact Information
		
block content
	.container(style="margin:auto;")
		#map(style="width:100%;height:400px;")
		.row
			.col-xs-12.col-lg-6
				h3 Contact One:
				p Tel:  011&nbsp;000&nbsp;0000
				p Fax: 011&nbsp;000&nbsp;0000
				h3 Contact Two:
				p Tel: 011&nbsp;000&nbsp;0000
				p Address: 100 Random Street, Middleof.
				h3 Contact Three:
				p Tel: 011&nbsp;000&nbsp;0000
				p Address: Joe Soap Street
			.col-xs-12.col-lg-6
				h3 Physical Address
				p House number, street name
				p Town
				p City
				p Code
			.col-xs-12.col-lg-6
				h3 Postal Address
				p P.O. Box 000 
				p Area
				p Code

		.row(style="border-top:1px solid rgb(156, 0, 186)")
			.col-xs-12.col-lg-6
				p(style="margin-top: 20px;font-size: 24px;")
					strong Rashard
					span (Chief Executive Officer)
				p(style="font-size: 16px;") Cell: 076 741 7434
				p(style="font-size: 16px;") Email: 
					a(href="mailto:rashard@ottomans.co.za") rashard@ottomans.co.za
			.col-xs-12.col-lg-6
				p(style="margin-top: 20px;font-size: 24px;")
					strong Tauriq
					span (Managing Director)
				p(style="font-size: 16px;") Cell: 079 129 5970
				p(style="font-size: 16px;") Email: 
					a(href="mailto:tauriq@ottomans.co.za") tauriq@ottomans.co.za

		h1(style="margin-top:20px;text-align:center;") Get in touch with us

		if enquirySubmitted
			h3 Thanks for getting in touch.
		else
			.row(style="width:80%;margin:auto;")
				.col-sm-8.col-md-6(style="width:100%;margin:auto;")
					form(method='post')
						input(type='hidden', name='action', value='contact')
						.form-group(class=validationErrors.name ? 'has-error' : null)
							label Name
							input(type='text', name='name.full', value=formData['name.full']).form-control
						.form-group(class=validationErrors.email ? 'has-error' : null)
							label Email
							input(type='email', name='email', value=formData.email).form-control
						.form-group
							label Phone
							input(type='text', name='phone', value=formData.phone, placeholder='(optional)').form-control
						.form-group(class=validationErrors.enquiryType ? 'has-error' : null)
							label What are you contacting us about?
							select(name='enquiryType').form-control
								option(value='') (select one)
								each type in enquiryTypes
									option(value=type.value, selected=formData.enquiryType == type.value)= type.label
						.form-group(class=validationErrors.message ? 'has-error' : null)
							label Message
							textarea(name='message', placeholder='Leave us a message...' rows=4).form-control= formData.message
						.form-actions
							div(style="width:120px;margin:auto;")
								button(type='submit', style="width: 160px;height: 80px;margin:auto;").btn.btn-primary Send

block js
	script(src="js/google-maps.js")
